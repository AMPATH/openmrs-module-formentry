<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!-- Beans to add to the current Application context definition -->
  
<beans>
	
    <bean id="formEntryUrlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
    	<property name="mappings">
            <props>
				<prop key="/formTaskpane.htm">formTaskpaneRedirect</prop>
				<prop key="/module/formEntry/formEntryQueue.form">formEntryQueueForm</prop>
				<prop key="/module/formEntry/formEntryQueue.list">formEntryQueueList</prop>
				<prop key="/module/formEntry/xsnUpload.form">xsnUploadForm</prop>
				
				<!-- Dynamic FormEntry -->
				<prop key="/module/formEntry/dynamicForm.form">dynamicFormEntryController</prop>
				<prop key="/module/formEntry/batchForm.form">batchFormEntryController</prop>
				<prop key="/module/formEntry/patientForm.form">patientFormEntryController</prop>
					
			</props>
		</property>
	</bean>
	
	<bean parent="serviceContext">
		<property name="moduleService">
			<list>
				<value>org.openmrs.module.formEntry.FormEntryService</value> <!-- service interface name -->
				<bean class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
					<property name="transactionManager"><ref bean="transactionManager"/></property>
					<property name="target">
						<bean class="org.openmrs.module.formEntry.impl.FormEntryServiceImpl">
							<property name="formEntryDAO">
								<bean class="org.openmrs.module.formEntry.db.hibernate.HibernateFormEntryDAO">
									<property name="sessionFactory"><ref bean="sessionFactory"/></property>	
								</bean>
							</property>	
						</bean>
					</property>
					<property name="preInterceptors">
						<list>
							<ref bean="authorizationInterceptor"/>
						</list>
					</property>
					<property name="transactionAttributeSource">
						<bean class="org.springframework.transaction.annotation.AnnotationTransactionAttributeSource"/>
					</property>
				</bean>
			</list>
		</property>
	</bean>
	
	
	<!-- Controllers -->
	
	<bean id="formTaskpaneRedirect" class="org.openmrs.web.controller.RedirectController">
		<property name="redirectView"><value>/module/formEntry/formTaskpane</value></property>
	</bean>
	
	<bean id="formEntryQueueList" class="org.openmrs.module.formEntry.web.controller.FormEntryQueueListController">
		<property name="commandName"><value>formEntryQueueList</value></property>
		<property name="formView"><value>/module/formEntry/formEntryQueueList</value></property>
		<property name="successView"><value>formEntryQueue.list</value></property>
	</bean>
	
	<bean id="formEntryQueueForm" class="org.openmrs.module.formEntry.web.controller.FormEntryQueueFormController">
		<property name="commandName"><value>entry</value></property>
		<property name="formView"><value>/module/formEntry/formEntryQueueForm</value></property>
		<property name="successView"><value>formEntryQueue.list</value></property>
	</bean>
	
	<bean id="xsnUploadForm" class="org.openmrs.module.formEntry.web.controller.XsnUploadFormController">
		<property name="commandName"><value>formList</value></property>
		<property name="formView"><value>/module/formEntry/xsnUploadForm</value></property>
		<property name="successView"><value>xsnUpload.form</value></property>
	</bean>
	
	<bean id="dynamicFormEntryController" class="org.openmrs.module.formEntry.web.dynamic.DynamicFormEntryController">
		<property name="commandName"><value>formInProgress</value></property>
		<property name="formView"><value>/module/formEntry/dynamic/enter</value></property>
		<property name="successView"><value>patientDashboard.form</value></property>
	</bean>

	<bean id="batchFormEntryController" class="org.openmrs.module.formEntry.web.dynamic.BatchFormEntryController">
		<property name="sessionForm"><value>true</value></property>
		<property name="commandName"><value>formData</value></property>
		<property name="commandClass"><value>org.openmrs.module.formEntry.web.dynamic.BatchFormEntryModel</value></property>
		<property name="formView"><value>/module/formEntry/dynamic/batch</value></property>
		<property name="successView"><value>patientDashboard.form</value></property>
	</bean>

	<bean id="patientFormEntryModelValidator" class="org.openmrs.module.formEntry.web.dynamic.PatientFormEntryModelValidator"/>
	<bean id="patientFormEntryController" class="org.openmrs.module.formEntry.web.dynamic.PatientFormEntryController">
		<property name="sessionForm"><value>true</value></property>
		<property name="commandName"><value>formData</value></property>
		<property name="commandClass"><value>org.openmrs.module.formEntry.web.dynamic.PatientFormEntryModel</value></property>
		<property name="validator"><ref bean="patientFormEntryModelValidator"/></property>
		<property name="formView"><value>/module/formEntry/dynamic/patientForm</value></property>
		<property name="successView"><value>patientDashboard.form</value></property>
	</bean>
	
	<!-- /Controllers -->
	
	
</beans>
